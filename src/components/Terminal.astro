---
interface Props {
  content: string;
  title?: string;
  fullscreen?: boolean;
}

const { content, title = "miguel@debian: ~", fullscreen = false } = Astro.props;
---

<div class={`terminal-container ${fullscreen ? "fullscreen" : ""}`}>
  <div class="terminal-header">
    <div class="terminal-buttons">
      <span class="terminal-button close"></span>
      <span class="terminal-button minimize"></span>
      <span class="terminal-button maximize"></span>
    </div>
    <div class="terminal-title">{title}</div>
  </div>
  <div class="terminal-body">
    <div class="terminal-content">
      <slot />
      {content && <div set:html={content} />}
    </div>
  </div>
</div>

<style>
  .terminal-container {
    background-color: #282a36;
    border-radius: 6px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
    font-family: 'JetBrains Mono', 'Courier New', monospace;
    margin: 2rem;
    overflow: hidden;
    width: calc(100% - 4rem);
  }

  .fullscreen {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    margin: 0;
    border-radius: 0;
    z-index: 1000;
  }

  .terminal-header {
    background-color: #1c1e26;
    display: flex;
    padding: 0.5rem;
    align-items: center;
  }

  .terminal-buttons {
    display: flex;
    gap: 6px;
    margin-right: 1rem;
  }

  .terminal-button {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .close {
    background-color: #ff5f56;
  }

  .minimize {
    background-color: #ffbd2e;
  }

  .maximize {
    background-color: #27c93f;
  }

  .terminal-title {
    color: #f8f8f2;
    font-size: 0.9rem;
    flex-grow: 1;
    text-align: center;
  }

  .terminal-body {
    color: #f8f8f2;
    padding: 1rem;
    height: calc(100% - 2.5rem);
    overflow-y: auto;
    background-color: #282a36;
  }

  .terminal-content {
    font-size: 0.9rem;
    line-height: 1.4;
  }

  /* Estilos para la simulaci√≥n de terminal */
  .terminal-content :global(.command) {
    color: #8be9fd;
    margin-bottom: 0.5rem;
  }

  .terminal-content :global(.command::before) {
    content: "miguel@debian:~$ ";
    color: #50fa7b;
  }

  .terminal-content :global(.output) {
    color: #f8f8f2;
    margin-bottom: 1rem;
  }

  .terminal-content :global(a) {
    color: #bd93f9;
    text-decoration: none;
  }

  .terminal-content :global(a:hover) {
    text-decoration: underline;
  }
</style>
