---
import Terminal from '../components/Terminal.astro';
import Layout from '../layouts/Layout.astro';

// Generate random stats for the system information
const lastLogin = new Date(Date.now() - Math.floor(Math.random() * 7 * 24 * 60 * 60 * 1000)).toUTCString();
const cpuUsage = Math.floor(Math.random() * 30) + "%";
const memoryUsage = Math.floor(Math.random() * 60) + "%";
const diskUsage = Math.floor(Math.random() * 70) + "%";
const currentDate = new Date().toUTCString();
 
---

<Layout title="Home - Miguel's Terminal">
  <Terminal fullscreen={true}>
    <div class="command">cat ~/about_me.md</div>
    <div class="output">
      <h1>Miguel's Digital Space</h1>
      
      <p>## About Me</p>
      <p>
        Hi there! I'm Miguel, a developer and technology enthusiast. 
        This terminal-styled website is my digital home where I share my projects, 
        thoughts, and experiences in the tech world.
      </p>
      
      <p>## Skills</p>
      <ul>
        <li>Backend Development: Node.js, Python, Java</li>
        <li>Frontend Development: HTML, CSS, JavaScript, React</li>
        <li>DevOps: Docker, Kubernetes, CI/CD</li>
        <li>Cloud: AWS, Azure, GCP</li>
      </ul>
      
      <p>## Current Focus</p>
      <p>
        I'm currently exploring the intersection of AI and web development, 
        trying to create more intuitive and accessible interfaces for complex systems.
      </p>
    </div>
    
    <div class="command">ls -l ~/links</div>
    <div class="output">
      <ul>
        <li>lrwxrwxrwx 1 miguel users 23 Aug 10 09:30 <a href="https://github.com/yourusername">github</a> -> github.com/yourusername</li>
        <li>lrwxrwxrwx 1 miguel users 24 Aug 10 09:30 <a href="https://linkedin.com/in/yourusername">linkedin</a> -> linkedin.com/in/yourusername</li>
        <li>lrwxrwxrwx 1 miguel users 22 Aug 10 09:30 <a href="https://twitter.com/yourusername">twitter</a> -> twitter.com/yourusername</li>
      </ul>
    </div>
    
    <div class="command">cd ..</div>
    <div class="output">
      <p>Returning to main directory...</p>
      <p><a href="/">Click here</a> to go back to the home page.</p>
    </div>
    
    <div class="command blinking-cursor"></div>
  </Terminal>
</Layout>

